<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.2) 50%), url(https://unsplash.it/600/200?image=486);">
  <div class="banner-content">
    <h1>Articles</h1>
     <%= link_to "Add a new article", new_article_path, :class => "btn btn-success" %>
  </div>
</div>

<div class="container text-center">

  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-sx-12 col-md-4">
        <div class="card">
            <div class="card-content">
              <h3><%= link_to article.title, article_path(article) %> </h3>
              <hr>
              <p class="ellipsis"><%= article.content %> </p>
            </div>
            <div class="card-buttons">
                <%= link_to article_path(article), method: :delete do %>
                  <i class="fa fa-trash fa-2x margin"></i>
                <% end %>
                <%= link_to edit_article_path(article) do %>
                  <i class="fa fa-pencil fa-2x margin"></i>
                <% end %>

            </div>
        </div>
      </div>
    <% end %>
  </div>

</div>

